@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] – AgriEnergyConnect.Web</title>

  <!-- Bootstrap + Icons -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
  />

  <!-- Brand CSS -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link 
    rel="stylesheet" 
    href="~/AgriEnergyConnect.Web.styles.css" 
    asp-append-version="true" 
  />

  @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column h-100 bg-white">
  <header>
    <nav class="navbar navbar-expand-lg navbar-light" 
         style="background-color: var(--green-light);">
      <div class="container">
        <a class="navbar-brand p-0 me-4" asp-controller="Home" asp-action="Index">
          <img src="~/Images/Agri_Energy_Connect_Logo.png" 
               alt="AgriEnergyConnect Logo" 
               style="height: 40px;" />
        </a>
        <button class="navbar-toggler border-0" type="button" 
                data-bs-toggle="collapse" data-bs-target="#mainNav">
          <i class="bi bi-list fs-2 text-dark"></i>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <!-- Left links -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
            @if (SignInManager.IsSignedIn(User))
            {
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="Home" asp-action="Index">
                  Home
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="Chat" asp-action="Index">
                  Hub
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="FarmerDashboard" asp-action="Dashboard">
                  Farmer Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="EmployeeDashboard" asp-action="Dashboard">
                  Employee Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="Home" asp-action="LearnMore">
                  Learn More
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark text-uppercase fw-semibold" 
                   asp-controller="Home" asp-action="MarketPlace">
                  Marketplace
                </a>
              </li>
            }
          </ul>

          <!-- Right side: login/profile -->
          <ul class="navbar-nav ms-auto">
            <partial name="_LoginPartial" />
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main role="main" class="flex-fill container py-4">
    @RenderBody()
  </main>

  <footer class="mt-auto border-top py-3">
    <div class="container text-center small text-muted">
      &copy; 2025 AgriEnergyConnect.Web |
      <a asp-controller="Home" asp-action="Privacy" class="text-dark">
        Privacy
      </a>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
  @await RenderSectionAsync("Scripts", required: false)

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      [...document.querySelectorAll('[data-bs-toggle="popover"]')]
        .forEach(el => new bootstrap.Popover(el));
    });
  </script>
</body>
</html>